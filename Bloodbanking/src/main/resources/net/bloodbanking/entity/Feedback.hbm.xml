<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

	<class 
	    name="net.bloodbanking.entity.Feedback" 
	    table="feedback"
	>
	
	    <id
	        name="fId"
	        type="java.lang.Long"
	        column="f_id"
	    >
	        <generator class="native" />
	    </id>
	    
	<property
	        name="name"
	        type="java.lang.String"
	        column="name"
	        not-null="true"
	        length="50"
	    />
	
	    <property
	        name="email"
	        type="java.lang.String"
	        column="email"
	        not-null="true"
	        length="50"
	    />
	    
	    <property
	        name="feedback"
	        type="java.lang.String"
	        column="feedback"
	        not-null="true"
	        length="255"
	    />
	
	
	</class>
</hibernate-mapping>
