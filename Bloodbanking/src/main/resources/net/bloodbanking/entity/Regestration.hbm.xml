<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

	<class 
	    name="net.bloodbanking.entity.Regestration" 
	    table="regestration"
	>
	
	    <id
	        name="regId"
	        type="java.lang.Long"
	        column="reg_id"
	        length="20"
	    >
	    
	        <generator class="native" />
	    </id>
	
	<property
	        name="uId"
	        type="java.lang.Long"
	        column="u_id"
	        not-null="true"
	        length="20"
	    />
	   
	    <property
	        name="name"
	        type="java.lang.String"
	        column="name"
	        not-null="true"
	        length="50"
	    />
	    
	     <property
	        name="conactNo"
	        type="java.lang.String"
	        column="contact_no"
	        not-null="true"
	        length="10"
	    />
	    
	     <property
	        name="address"
	        type="java.lang.String"
	        column="address"
	        not-null="true"
	        length="50"
	    />
	    
	     <property
	        name="state"
	        type="java.lang.String"
	        column="state"
	        not-null="true"
	        length="15"
	    />
	    
	     <property
	        name="city"
	        type="java.lang.String"
	        column="city"
	        not-null="true"
	        length="15"
	    />
	    
	     <property
	        name="location"
	        type="java.lang.String"
	        column="location"
	        not-null="true"
	        length="15"
	    />
	    
	     <property
	        name="pinCode"
	        type="java.lang.String"
	        column="pin_code"
	        not-null="true"
	        length="10"
	    />
	    
	     <property
	        name="email"
	        type="java.lang.String"
	        column="email"
	        not-null="true"
	        length="30"
	    />
	    
	     <property
	        name="birthDate"
	        type="java.sql.Timestamp"
	        column="birth_date"
	        not-null="true"
	       
	    />
	    
	     <property
	        name="gender"
	        type="java.lang.String"
	        column="gender"
	        not-null="true"
	        length="6"
	    />
	    
	     <property
	        name="userName"
	        type="java.lang.String"
	        column="user_name"
	        not-null="true"
	        length="20"
	    />
	    
	     <property
	        name="password"
	        type="java.lang.String"
	        column="password"
	        not-null="true"
	        length="20"
	    />
	
	 <property
	        name="securityQue"
	        type="java.lang.String"
	        column="security_que"
	        not-null="true"
	        length="30"
	    />
	    
	     <property
	        name="answer"
	        type="java.lang.String"
	        column="answer"
	        not-null="true"
	        length="50"
	    />
	    
	     <property
	        name="flag"
	        type="java.lang.Long"
	        column="flag"
	    />
	</class>
</hibernate-mapping>
