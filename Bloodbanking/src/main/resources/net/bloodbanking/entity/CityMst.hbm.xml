<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

	<class 
	    name="net.bloodbanking.entity.CityMst" 
	    table="city_mst"
	>
	
	    <id
	        name="cityId"
	        type="java.lang.Long"
	        column="city_id"
	    >
	        <generator class="native" />
	    </id>
	    
	     <property
	        name="stateId"
	        type="java.lang.Long"
	        column="state_id"
	        not-null="true"
	    />
	
	    <property
	        name="cityName"
	        type="java.lang.String"
	        column="city_name"
	        not-null="true"
	        length="15"
	    />
	
	</class>
</hibernate-mapping>
